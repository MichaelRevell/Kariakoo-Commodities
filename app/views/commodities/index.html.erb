<h1>Listing Commodities</h1>

<table border="1">
  <tr>
    <th>Englishname</th>
    <th>Swahiliname</th>
    <th>Quality</th>
    <th>Farmgate unit</th>
    <th>Delivered unit</th>
    <th>Wholesale unit</th>
    <th>Retail unit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @commodities.each do |commodity| %>
  <tr>
    <td><%= commodity.englishName %></td>
    <td><%= commodity.swahiliName %></td>
    <td><%= commodity.quality %></td>
    <td><%= commodity.farmgate_unit %></td>
    <td><%= commodity.delivered_unit %></td>
    <td><%= commodity.wholesale_unit %></td>
    <td><%= commodity.retail_unit %></td>
    <td><%= link_to 'Show', commodity %></td>
    <td><%= link_to 'Edit', edit_commodity_path(commodity) %></td>
    <td><%= link_to 'Destroy', commodity, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

